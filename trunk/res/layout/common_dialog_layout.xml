<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_main"
    android:layout_width="@dimen/common_dialog_width"
    android:layout_height="@dimen/common_dialog_height"
    android:layout_gravity="center"
    android:background="@drawable/img_bind_bracelet_dialog_bg"
    android:paddingBottom="@dimen/common_dialog_padding_tb"
    android:paddingLeft="@dimen/common_dialog_padding_lr"
    android:paddingRight="@dimen/common_dialog_padding_lr"
    android:paddingTop="@dimen/common_dialog_padding_tb"
    android:visibility="gone" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_dialog_content_height" >

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_btn_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/bind_bracelet_btn_ok_margin_t"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/bind_bracelet_btn_ok_width"
            android:layout_height="@dimen/bind_bracelet_btn_ok_height"
            android:background="@drawable/img_bind_bracelet_btn_bg"
            android:text="@string/common_ok"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="@dimen/bind_bracelet_btn_ok_width"
            android:layout_height="@dimen/bind_bracelet_btn_ok_height"
            android:layout_marginLeft="@dimen/bind_bracelet_btn_ok_margin_center"
            android:background="@drawable/img_bind_bracelet_btn_bg"
            android:text="@string/common_cancle"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>