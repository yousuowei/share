<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bind_bracelet_bottom_bg"
    android:orientation="vertical" >

    <include layout="@layout/aci_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/task_add_tv_margin_b"
        android:layout_marginTop="@dimen/task_add_tv_margin_t"
        android:paddingLeft="@dimen/bind_bracelet_tv_margin_lr"
        android:paddingRight="@dimen/bind_bracelet_tv_margin_lr" >

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/task_add_tv_margin_b"
            android:textColor="#787878"
            android:textSize="13sp" />
    </ScrollView>

</LinearLayout>